<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="com.example.cal.MainActivity">

    <GridLayout
        android:layout_width="352dp"
        android:layout_height="511dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:columnCount="4"
        android:rowCount="7"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <TextView
            android:id="@+id/tmp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_columnSpan="4"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_marginTop="10dip"
            android:layout_row="0"
            android:background="@android:color/holo_orange_light"
            android:singleLine="true"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_columnSpan="4"
            android:layout_marginBottom="5dip"
            android:layout_marginLeft="3dip"
            android:layout_marginRight="3dip"
            android:layout_row="0"
            android:background="@android:color/holo_orange_light"
            android:gravity="bottom|right"
            android:text="0"
            android:ellipsize="end"
            android:maxLines="1"
            android:textSize="70sp" />

        <Button
            android:id="@+id/buttondel"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_row="2"
            android:onClick="buttondel"
            android:text="del" />

        <Button
            android:id="@+id/buttonclear"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="0"
            android:layout_row="2"
            android:onClick="buttonclear"
            android:text="AC" />

        <Button
            android:id="@+id/buttonlb"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="1"
            android:layout_row="2"
            android:onClick="buttonlb"
            android:text="(" />

        <Button
            android:id="@+id/buttonrb"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="2"
            android:layout_row="2"
            android:onClick="buttonrb"
            android:text=")" />

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_row="3"
            android:onClick="button3"
            android:text="3" />

        <Button
            android:id="@+id/buttonplus"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="0"
            android:layout_row="3"
            android:onClick="buttonplus"
            android:text="+" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="1"
            android:layout_row="3"
            android:onClick="button1"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="2"
            android:layout_row="3"
            android:onClick="button2"
            android:text="2" />

        <Button
            android:id="@+id/buttonminus"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="0"
            android:layout_row="4"
            android:onClick="buttonminus"
            android:text="-" />

        <Button
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="1"
            android:layout_row="4"
            android:onClick="button4"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="2"
            android:layout_row="4"
            android:onClick="button5"
            android:text="5" />

        <Button
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_row="4"
            android:onClick="button6"
            android:text="6" />

        <Button
            android:id="@+id/buttonmul"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="0"
            android:layout_row="5"
            android:onClick="buttonmul"
            android:text="*" />

        <Button
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="1"
            android:layout_row="5"
            android:onClick="button7"
            android:text="7" />

        <Button
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="2"
            android:layout_row="5"
            android:onClick="button8"
            android:text="8" />

        <Button
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_row="5"
            android:onClick="button9"
            android:text="9" />

        <Button
            android:id="@+id/buttondiv"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="0"
            android:layout_row="6"
            android:onClick="buttondiv"
            android:text="/" />

        <Button
            android:id="@+id/buttondot"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="1"
            android:layout_row="6"
            android:onClick="buttondot"
            android:text="." />

        <Button
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="2"
            android:layout_row="6"
            android:onClick="button0"
            android:text="0" />

        <Button
            android:id="@+id/buttonequal"
            style="@style/Widget.AppCompat.Button.Colored"
            android:layout_width="wrap_content"
            android:layout_height="72dp"
            android:layout_column="3"
            android:layout_row="6"
            android:onClick="buttonequal"
            android:text="=" />
    </GridLayout>
</android.support.constraint.ConstraintLayout>
